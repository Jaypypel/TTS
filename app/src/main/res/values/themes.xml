    <!-- Green and Brown Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Color (Green) -->
        <item name="colorPrimary">@color/primaryGreen</item>

        <!-- Primary Variant Color (Darker Green) -->
        <item name="colorPrimaryVariant">@color/primaryGreenVariant</item>

        <!-- Text and icons on Primary (Light text on Green) -->
        <item name="colorOnPrimary">@color/onPrimaryGreen</item>

        <!-- Secondary Color (Brown) -->
        <item name="colorSecondary">@color/secondaryBrown</item>

        <!-- Text and icons on Secondary (Light text on Brown) -->
        <item name="colorOnSecondary">@color/onSecondaryBrown</item>

        <!-- Surface Color (Background of cards, etc.) -->
        <item name="colorSurface">@color/surfaceColor</item>

        <!-- Text on Surface -->
        <item name="colorOnSurface">@color/onSurfaceText</item>

        <!-- Background Color -->

        <!-- Text on Background -->
        <item name="colorOnBackground">@color/onBackgroundText</item>

        <!-- Error Color -->
        <item name="colorError">@color/errorColor</item>

        <!-- Text on Error -->
        <item name="colorOnError">@color/onErrorText</item>

        <!-- Divider Color -->

    </style>

    <!-- Custom Picker Theme for Material Calendar -->
    <style name="CustomPickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Transparent window background for custom date picker dialog -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Transparent status bar and navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>


</resources>