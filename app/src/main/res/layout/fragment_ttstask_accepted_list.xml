<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TTSTaskAcceptedListFragment">


    <TextView
        android:id="@+id/textViewAcceptedListUser"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAcceptedListDate"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAcceptedListTime"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="27dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewAcceptedListTaskUser"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:text="User"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAcceptedListTaskDate"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="2"
                android:layout_marginLeft="25dp"
                android:text="Date"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAcceptedListTask"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_column="3"
                android:layout_marginLeft="12dp"
                android:text="Task"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAcceptedListStatus"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_column="4"
                android:text="Status"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listAccepted"
        android:layout_width="match_parent"
        android:layout_height="482dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp" />

</RelativeLayout>