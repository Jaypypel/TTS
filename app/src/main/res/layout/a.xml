<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.MaterialTextView
                android:id="@+id/textViewTaskdeliUser"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <androidx.appcompat.widget.MaterialTextView
                android:id="@+id/textViewDate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <androidx.appcompat.widget.MaterialTextView
                android:id="@+id/textViewTime"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginTop="0dp">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <androidx.appcompat.widget.MaterialAutoCompleteTextView
                android:id="@+id/editTextTaskDeliUserName"
                android:layout_width="215dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:completionThreshold="1"
                android:hint="Enter User Name"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <androidx.appcompat.widget.MaterialAutoCompleteTextView
                android:id="@+id/editTextTaskDeliTaskName"
                android:layout_width="215dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:hint="Enter Task Name"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.MaterialEditText
                android:id="@+id/editTextTaskDeliDes"
                android:layout_width="215dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:hint="Enter Description"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <androidx.appcompat.widget.MaterialAutoCompleteTextView
                android:id="@+id/editTextTaskDeliActName"
                android:layout_width="215dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:hint="Enter Activity Name"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <androidx.appcompat.widget.MaterialTextView
                android:id="@+id/editTextTaskDeliProjNo"
                android:layout_width="215dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:hint="Enter Project No."
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <androidx.appcompat.widget.MaterialAutoCompleteTextView
                android:id="@+id/editTextTaskDeliProjName"
                android:layout_width="215dp"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:hint="Enter Project Name"
                android:inputType="text" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout2"
        android:layout_marginTop="0dp">

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.MaterialEditText
                android:id="@+id/editTextTaskDeliExpDate"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:hint="Expt. Date"
                android:inputType="textPersonName" />

            <androidx.appcompat.widget.MaterialEditText
                android:id="@+id/editTextTaskDeliExpTime"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:hint="Expt. Time"
                android:inputType="textPersonName" />

            <androidx.appcompat.widget.MaterialEditText
                android:id="@+id/editTextTaskDeliExpTotalTimeHH"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:hint="HH"
                android:inputType="time" />

            <androidx.appcompat.widget.MaterialTextView
                android:id="@+id/editTextTaskDeliExpTotalTimeColon"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:text=":"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.MaterialEditText
                android:id="@+id/editTextTaskDeliExpTotalTimeMM"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:hint="MM"
                android:inputType="time" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout3"
        android:layout_marginTop="0dp">

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.MaterialSpinner
                android:id="@+id/spinnerTaskDeliMeasurableSelect"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" />

            <androidx.appcompat.widget.MaterialEditText
                android:id="@+id/editTextTaskDeliQty"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:hint="Qty"
                android:inputType="number" />

            <androidx.appcompat.widget.MaterialAutoCompleteTextView
                android:id="@+id/editTextTaskDeliUnit"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:hint="Unit"
                android:inputType="text" />

            <androidx.appcompat.widget.MaterialButton
                android:id="@+id/buttontTaskDeliAdd"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:text="ADD"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

