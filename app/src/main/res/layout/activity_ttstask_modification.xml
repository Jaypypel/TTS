<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TTSTaskModificationActivity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewPreviewUser"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_marginLeft="50dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Activity Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewActName"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Task Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTaskName"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Project Code"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewProjNo"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </TableRow>


    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="0dp"
            android:text="Project Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewProjName"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewStartTimeLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Start Time"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewStartTime"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewEndTimeLabel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="End Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEndTime"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Measurables"
            android:textStyle="bold" />

    </TableRow>

    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1">

        <!-- 2 columns -->
        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp">

            <ListView
                android:id="@+id/listMeasurablePreview"
                android:layout_width="301dp"
                android:layout_height="45dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp" />

        </TableRow>
    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout2">

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_column="1"
                android:text="Description"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextModificationDescription"
                android:layout_width="225dp"
                android:layout_height="75dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Enter Modification Description"
                android:inputType="textMultiLine" />

        </TableRow>


    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout3">

        <TableRow
            android:id="@+id/tableRow13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonModifySubmit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="120dp"
                android:text="Submit"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    </RelativeLayout>

