<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TTSTaskCountFragment">

    <TextView
        android:id="@+id/textViewTaskCountUser"
        android:layout_width="103dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTaskCountDate"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTaskCountTime"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewPendingTask"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:layout_column="1"
                android:textColor="@android:color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewAcceptedTask"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:layout_column="2"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewApprovalTask"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:layout_column="1"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCompletedTask"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:layout_column="2"
                android:textColor="@android:color/black"
                android:textStyle="bold" />



        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewWDSUser"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:text="User"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWDSDate"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="2"
                android:layout_marginLeft="25dp"
                android:text="Date"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWDSTask"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_column="3"
                android:layout_marginLeft="12dp"
                android:text="Task"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWDSStatus"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_column="4"
                android:text="Status"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/taskList"
        android:layout_width="350dp"
        android:layout_height="460dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp" />

</RelativeLayout>