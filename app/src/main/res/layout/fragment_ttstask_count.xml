<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TTSTaskCountFragment">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        >

    <TextView
        android:id="@+id/textViewTaskCountUser"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="0"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewTaskCountDate"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_row="0"
        android:gravity="right"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTaskCountTime"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_row="1"
        android:gravity="right"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="80dp">


        <TextView
            android:id="@+id/textViewPendingTask"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>


        <TextView
            android:id="@+id/textViewAcceptedTask"
            android:layout_width="150dp"
            android:layout_height="56dp"

            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>


        <TextView
            android:id="@+id/textViewApprovalTask"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewCompletedTask"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"/>

    </GridLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewWDSUser"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="User"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewWDSDate"
            android:gravity="center"
            android:text="Date"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textViewWDSTask"
            android:gravity="center"
            android:text="Task"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/textViewWDSStatus"
            android:gravity="center"
            android:text="Status"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ListView
        android:id="@+id/taskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="255dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>