<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<androidx.fragment.widget.SwipeRefreshLayout-->
        <!--android:id="@+id/swipeToRefreshAllocatedList"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->


    <!--</androidx.fragment.widget.SwipeRefreshLayout>-->

    <TextView
        android:id="@+id/textViewAllocatedListUser"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAllocatedListDate"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAllocatedListTime"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="27dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />



    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewAllocatedListTaskUser"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:text="User"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAllocatedListTaskDate"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="2"
                android:layout_marginLeft="25dp"
                android:text="Date"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAllocatedListTask"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_column="3"
                android:layout_marginLeft="12dp"
                android:text="Task"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAllocatedListStatus"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_column="4"
                android:text="Status"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp" />

</RelativeLayout>