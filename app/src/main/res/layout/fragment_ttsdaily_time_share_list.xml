<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TTSDailyTimeShareListFragment">

    <TextView
        android:id="@+id/textViewDailyTimeShareListUser"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDailyTimeShareListDate"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDailyTimeShareListTime"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="28dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewDailyTimeShareListStartTime"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:text="Start Time"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDailyTimeShareListEndTime"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_column="2"
                android:text="End Time"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDailyTimeShareListTaskName"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:layout_column="3"
                android:text="Task"

                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDailyTimeShareListProjName"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:layout_column="4"
                android:text="Project"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listDailyTimeShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />


</RelativeLayout>