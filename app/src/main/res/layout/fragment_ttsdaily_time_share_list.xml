<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TTSDailyTimeShareListFragment"
    android:gravity="center">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        >


    <TextView
        android:id="@+id/textViewDailyTimeShareListUser"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="0"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textStyle="bold"  />

    <TextView
        android:id="@+id/textViewDailyTimeShareListDate"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_row="0"
        android:gravity="right"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDailyTimeShareListTime"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_row="1"
        android:gravity="right"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:gravity="center">

            <TextView
                android:id="@+id/textViewDailyTimeShareListStartTime"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"

                android:text="Start Time"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDailyTimeShareListEndTime"
                android:gravity="center"
                android:text="End Time"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textViewDailyTimeShareListTaskName"
                android:gravity="center"
                android:text="Task"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/textViewDailyTimeShareListProjName"
                android:gravity="center"
                android:text="Project"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:id="@+id/listDailyTimeShare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/dailyTimeShares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Daily Time Share Available!"
        android:layout_marginStart="125dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="?attr/colorOnBackground"
        android:textStyle="bold"
        />


</RelativeLayout>