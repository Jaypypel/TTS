<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewUser"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="-10dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="97dp"
                android:layout_height="35dp"
                android:layout_column="2"
                android:layout_marginLeft="90dp"
                android:ems="10"
                android:hint="Enter Date"
                android:inputType="textPersonName"
                android:paddingBottom="5dp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginTop="0dp">

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Project Code:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TSTextViewProjNo"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:ems="10"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Project Name:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TSTextViewProjName"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:ems="10"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Activity Name:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TSTextViewActName"
                android:layout_width="220dp"
                android:layout_height="37dp"
                android:layout_column="2"
                android:ems="10"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_column="1"
                android:text="Task Name:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TSTextViewTaskName"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:ems="10"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </TableRow>



    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout2"
        android:layout_marginTop="0dp">

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputMainStartTimeLayout"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                app:hintEnabled="true"
                app:boxBackgroundMode="outline"
                android:hint="Start Time">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextStartTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:inputType="time"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputMainEndTimeLayout"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="20dp"
                app:hintEnabled="true"
                android:hint="End Time"
                android:layout_weight="1"
                app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEndTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="time"
                android:gravity="center_vertical"/>
            </com.google.android.material.textfield.TextInputLayout>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:id="@+id/spinnerTimeShareMeasurable"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:spinnerMode="dialog"
            android:textColor="@android:color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutQty"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:hint="Qty"
            app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTimeShareMeasurableQty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:gravity="center_vertical"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutUnit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:hint="Unit"
            app:boxBackgroundMode="outline"
            app:hintEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTimeShareMeasurableUnit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:gravity="center_vertical"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
        <Button
            android:id="@+id/buttonTimeShareMeasurableAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ADD"
            android:textStyle="bold"
            android:focusableInTouchMode="true"
            android:clickable="true"/>
        </TableRow>

    </TableRow>
    </TableLayout>


    <TableLayout
        android:id="@+id/tableLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout4"
        android:layout_marginTop="0dp">

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ListView
            android:id="@+id/listTimeShareMeasurable"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>
    </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
           >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputMainProjectLayout"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="5dp"
                app:hintEnabled="true"
                app:boxBackgroundMode="outline"
                android:hint="Enter Description">

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="text"
                android:gravity="center"/>
            </com.google.android.material.textfield.TextInputLayout>
        </TableRow>
    </TableLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout5"
        android:layout_marginTop="25dp">


        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Cancel" />

            <!--<Button-->
            <!--android:id="@+id/buttonPreview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_column="2"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:text="Preview"-->
            <!--android:textStyle="bold" />-->

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_column="2"
                android:layout_marginLeft="100dp"
                android:text="Submit" />
        </TableRow>

    </TableLayout>



    <!--<ProgressBar-->
        <!--android:id="@+id/progressBarInTimeShare"-->
        <!--style="?android:attr/progressBarStyleLarge"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:progressDrawable="@drawable/circular_progress_bar" />-->
</RelativeLayout>